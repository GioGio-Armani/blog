<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1>Bienvenue sur mon blog</h1>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h3>{{lastArticle.titre}}</h3>
        </div>
        <div class="card-body">
          <p class="card-text">{{lastArticle.contenu}}</p>
          <a href="/article/{{lastArticle._id}}" class="btn btn-primary">Voir
            plus</a>
        </div>
        <div class="card-footer">
          <p class="card-text">Ecris par:
            {{lastArticle.pseudo}}
            le
            {{moment lastArticle.createdAt "DD/MM/YYYY Ã  HH[h]mm"}}</p>
        </div>
      </div>
    </div>
  </div>
</div>